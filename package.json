{
  "name": "@designdoc/components",
  "version": "1.0.0",
  "description": "Design system documentation",
  "type": "module",
  "main": "dist/DesignDocComponents.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint \"src/**/*\"",
    "typecheck": "tsc",
    "build": "rimraf dist && npm run typecheck && npm run build:babel",
    "build:babel": "babel src --extensions \".ts\" --out-dir dist --source-maps",
    "watch-build": "npm run build:babel -- --watch",
    "check-format": "prettier --check .",
    "test": "jest --passWithNoTests",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/single-spa/component-library.git"
  },
  "files": [
    "dist"
  ],
  "author": "Joel Denning and Wade Harkins",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/single-spa/component-library/issues"
  },
  "homepage": "https://github.com/single-spa/component-library#readme",
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.3",
    "@babel/plugin-proposal-decorators": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "babel-plugin-add-import-extension": "^1.6.0",
    "eslint": "^8.2.0",
    "eslint-config-ts-important-stuff": "^1.1.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "pinst": "^2.1.6",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "lit": "^2.0.2"
  }
}
